<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pemilik.masterTernak.DetailMasterTernak"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/swhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Detail Data Periode Ternak"
            android:textColor="@color/text"
            android:textSize="20dp" />
    </RelativeLayout>

    <!--tampil id-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Periode"
        android:fontFamily="@font/poppins"
        android:textColor="@color/text"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/id_periode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:textColor="@color/text"
        android:textSize="16dp"/>

    <!--tanggal-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Mulai"
        android:fontFamily="@font/poppins"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tanggal_datang"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:fontFamily="@font/poppins"
            android:hint="Tanggal Mulai"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textColor="@color/text" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tanggal_datang"
            android:background="@drawable/bg_input"
            android:elevation="5dp"
            android:src="@drawable/ic_baseline_date_range_24" />
    </RelativeLayout>

    <!--jumlah bibit-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Bibit"
        android:fontFamily="@font/poppins"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/jumlah_bibit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_input"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/text"
        android:hint="Jumlah Bibit"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/primary"
        android:text="tambah periode" />
    <Button
        android:id="@+id/btnHapus"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/soft"
        android:textColor="@color/text"
        android:text="hapus" />
</LinearLayout>