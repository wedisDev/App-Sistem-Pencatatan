<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_soft"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nama_kandang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Nama Kandang"
            android:textColor="@color/primarynd"/>

        <TextView
            android:id="@+id/ket_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_kandang"
            android:fontFamily="@font/poppins_semibold"
            android:text="10"
            android:textColor="@color/primary"
            android:textSize="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_kandang"
            android:layout_toRightOf="@id/ket_hari"
            android:fontFamily="@font/poppins"
            android:text="hari"
            android:textColor="@color/primarynd"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />
    </RelativeLayout>

</LinearLayout>