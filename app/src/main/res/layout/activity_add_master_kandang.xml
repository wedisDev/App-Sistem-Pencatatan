<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pemilik.masterKandang.AddMasterKandang"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/swhite">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Data Kandang"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24dp"
        android:textColor="@color/text"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"/>

    <!--input nama-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Kandang"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/nama_kandang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/poppins"
        android:padding="10dp"
        android:hint="Nama Kandang"
        android:textColor="@color/text"/>

    <!--input email-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapasitas Kandang"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/kapasitas"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:textSize="15dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/poppins"
        android:padding="10dp"
        android:hint="Kapasitas Kandang"
        android:textColor="@color/text"/>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/primary"
        android:text="simpan data" />
    <Button
        android:id="@+id/btnKembali"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/soft"
        android:textColor="@color/text"
        android:text="kembali" />

</LinearLayout>