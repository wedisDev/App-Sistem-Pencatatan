<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pemilik.masterKandang.EditMasterKandang"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/swhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_keyboard_backspace_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:text="Detail Data Kandang"
            android:textSize="24dp"
            android:textColor="@color/text"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>
    </RelativeLayout>

    <!--input nama-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Kandang"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/id_kandang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/poppins"
        android:padding="15dp"
        android:textColor="@color/text"/>

    <!--input nama-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Kandang"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/nama_kandang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="15dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/poppins"
        android:padding="15dp"
        android:hint="Nama Kandang"
        android:textColor="@color/text"/>

    <!--input email-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapasitas Kandang"
        android:fontFamily="@font/poppins_light"
        android:textSize="15dp"
        android:textColor="@color/text"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/kapasitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="15dp"
        android:background="@drawable/bg_input"
        android:fontFamily="@font/poppins"
        android:padding="15dp"
        android:hint="Kapasitas Kandang"
        android:textColor="@color/text"/>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/primary"
        android:text="edit data" />
    <Button
        android:id="@+id/btnHapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/soft"
        android:textColor="@color/text"
        android:text="hapus data" />

</LinearLayout>